<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8" />
	<link rel="stylesheet" href="/bulma.min.css">
	<link rel="stylesheet" href="/style.css">
	<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"> </script>
</head>

<body>
	<section class="section">
		<div class="maincolumns columns is-desktop is-vcentered">
			<div class="column is-10 is-offset-1 notification is-info is-light box container">
				<div class="title">
					Pets for <%= owner.first_name %> <%= owner.last_name %>
				</div>
				<% if (locals.allPersonPets) { %>
				<div class="table-container">
					<table class="table is-bordered is-hoverable is-striped is-narrow">
						<thead>
							<tr>
								<th> Name </th>
								<th> Type </th>
								<th> &nbsp; </th>

							</tr>
						</thead>
						<% let i=0; %>
						<% for(i=0; i < allPersonPets.length; i++) { %>
						<tr>
							<td>
								<%= allPersonPets[i].name %>
							</td>
							<td>
								<%= allPersonPets[i].type %>
							</td>
							<td><a href="/deletePet?pet_id=<%= allPersonPets[i].pet_id %>&person_id=<%= owner.person_id %>">
									<span class="icon trash is-small">
										<i class="fas fa-trash"></i>
									</span></a>
							</td>
						</tr>
						<% } %>
						<tfoot>
							<tr>
								<td colspan=" 3">
									There are <%= i %> pets.
								</td>
							</tr>
						</tfoot>
					</table>
				</div>
				<% } %>
				<form action="/addPet" method="post">
					<div class="field is-horizontal">
						<div class="field-label is-normal">
							<label class="label">Add New Pet</label>
						</div>
						<div class="field-body">
							<div class="field">
								<p class="control is-expanded">
									<input name="name" class="input" type="text" placeholder="Name">
								</p>
							</div>
							<div class="field">
								<p class="control is-expanded">
									<input name="type" class="input" type="text" placeholder="Type">
								</p>
							</div>

							<input name="person_id" class="input" type="hidden" value="<%= owner.person_id %>">

							<div class="field">
								<button class="button is-link">
									<span>Add</span>
									<span class="icon is-small">
										<i class="fas fa-paw"></i>
									</span>
								</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</section>
</body>

</html>